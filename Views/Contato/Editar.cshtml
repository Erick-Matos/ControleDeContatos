@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>
<form>
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div>
        <div class="mb-3">
            <label for="email">E-mail</label>
            <input type="text" class="form-control" placeholder="Digite o E-mail do contato">
        </div>
    </div>
    <div>
        <div class="mb-3">
            <label for="cellar">Celular</label>
            <input type="text" class="form-control" placeholder="Digite o número do contato">
        </div>
    </div>

    <button type="submit" class="btn btn-primary mb-2 w-100">Alterar</button>
    <a class="btn btn-secondary w-100 " asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>