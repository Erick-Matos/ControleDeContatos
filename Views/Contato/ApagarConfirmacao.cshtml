@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";

}


<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)</h3>

</div>
<a class="btn btn-primary mb-2 w-100"role="button"asp-action="Index" asp-controller="Contato">Cancelar exclusão</a>
<a class="btn btn-danger w-100"role="button"asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar exclusão</a>
